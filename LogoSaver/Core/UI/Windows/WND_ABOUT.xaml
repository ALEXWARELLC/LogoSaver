        <Label Margin="0,0,15,10" Name="LABEL_VERSION" Content="0.0.1a2" Foreground="#dfdfdf" Height="30" Width="70" FontSize="20" HorizontalAlignment="Right" VerticalAlignment="Bottom" Padding="0,0,0,0"></Label>
    </Grid>
</Window>
